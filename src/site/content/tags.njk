---
layout: default
meta_title: Categories
meta_description: Categories page description
body_class: categories
title: Tags
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - Oops!
permalink: /tag/{{ tag }}/
---

<main id="main" class="main inner flex flex-1 flex-col py-10 lg:py-20 focus:outline-none" tabindex="-1">

    <article id="container-centre" class="column centre flex-1">

        <header>
            <h1 class="page-title text-2xl md:text-center md:text-4xl mb-16 lg:mb-20 lg:text-5xl">Tags â€” {{ tag | capitalize }}</h1>
        </header>

        <div class="posts">

            {% for post in collections[tag] | reverse %}
              {% if post.data.tags %}
                <article class="text-gray-500 mb-8 pb-8 border-b border-gray-200">
                    <h2 class="text-4xl mb-3">
                        <a class="block text-blue-500 hover:text-gray-900" href="{{ post.url | url }}">{{ post.data.title }}</a>
                    </h2>
                    <time datetime="{{ post.data["created"] }}">
                        {{ post.data["created"] | dateDisplay }}
                    </time>
                </article>
              {% endif %}
            {% endfor %}
        </div>

    </article>

</main>